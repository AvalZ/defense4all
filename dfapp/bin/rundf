#!/bin/bash

#test java is defined
which java > /dev/null
if [ $? -ne 0 ] 
then
   echo "Verify java installation"
   exit -1
fi

# check required jars in current directory
exec_jar=`ls df.aggregate*jar`
if [ $? -ne 0 ]
then
   echo "Application jar is not found"
   exit -1
fi

# find restservice war
restservice_war=`ls restservice*war`
if [ $? -ne 0 ]
then
   echo "Restservice war is not found"
   exit -1
fi

java -DrestWarPath=$restservice_war -jar $exec_jar $*